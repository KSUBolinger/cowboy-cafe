<UserControl x:Class="PointOfSale.CustomizedTexasTea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customized Texas Tea"/>
        <StackPanel Orientation="Horizontal">
            <Label>Sweet</Label>
            <CheckBox IsChecked="{Binding Path=Sweet}"/>
            <Label>Lemon</Label>
            <CheckBox IsChecked="{Binding Path=Lemon}"/>
            <Label>Ice</Label>
            <CheckBox IsChecked="{Binding Path=Ice}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
